  <div class="container site-wrap">
    <div id="headerBar">
      <h1 id="header">Submit</h1>
    </div>

    <form class="form-horizontal" method="POST" action="/submit">
      <div class="row">
      <h4 style="b:2px solid black"><b>Info</b></h4>
        <div class="form-group">
          <label for="inputTitle" class="col-sm-2 control-label">Title</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="inputTitle" placeholder="Project Title" name="title">
          </div>
        </div>
        <div class="form-group">
          <label for="description" class="col-sm-2 control-label">Description</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="description" placeholder="Project Description" name="description">
          </div>
        </div>
        <div class="form-group">
          <label for="url" class="col-sm-2 control-label">URL</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="url" placeholder="Project URL" name="projectURL">
          </div>
        </div>
      <h4 style="b:2px solid black"><b>Criteria</b></h4>
        <div class="form-group">
          <label for="criterion1" class="col-sm-2 control-label">Criterion 1</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="criteron1" placeholder="Rating Criterion" name="criterion1">
          </div>
        </div>
        <div class="form-group">
          <label for="criterion2" class="col-sm-2 control-label">Criterion 2</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="criterion2" placeholder="Rating Criterion" name="criterion2">
          </div>
        </div>
        <div class="form-group">
          <label for="criterion3" class="col-sm-2 control-label">Criterion 3</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="criterion3" placeholder="Rating Criterion" name="criterion3">
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary btn-block">Submit</button>
          </div>
        </div>
      </div>
    </form>

  </div>

